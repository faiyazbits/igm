<div style="position: relative;">
  <button type="button" {{on 'click' this.confirm}} class="btn-delete">
    {{yield}}
  </button>
  {{#if this.showConfirm}}
  <div class="delete-confirm">
    Are you sure you want to delete this {{@itemTypeName}}?
    <div class="footer">
      <button class="btn btn-success" {{on 'click' this.delete}}>Yes</button>
      <button class="btn btn-danger" {{on 'click' this.cancel}}>No</button>
    </div>
  </div>
  {{/if}}
</div>
