<h2>Editing {{this.model.issuer.name}}</h2>

<IssuerForm
  @issuer={{this.model.issuer}}
  @allIssuers={{this.model.issuers}}
  @allCountries={{this.model.allCountries}}
  @allIndustries={{this.model.allIndustries}}
/>

<button
  class="btn btn-default"
  type="button"
  {{on "click" this.delete}}
>Delete</button>