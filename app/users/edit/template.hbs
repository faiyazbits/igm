<h1>Editing {{this.model.fullName}}</h1>

<div class="row">
  <div class="col-md-3">
    <label for="biography">Biography</label>
    <Textarea @value={{this.model.biography}} class="form-control" />
  </div>
</div>

<div class="btn-group">
  <button {{on 'click' (fn this.save this.model)}} class="btn btn-primary">Save</button>
</div>
